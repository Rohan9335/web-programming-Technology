    <html>
        <head>
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js" ></script>

 <script>
            $(document).ready(()=>{
                $("#b1").click(()=>{
                        $.get("message",(responsedata)=>{

                            $("#p1").html( `message = ${responsedata.message}`)
                            $("#p2").html(`sender = ${responsedata.sender}`)

                        })
                })

                $("#b2").click(()=>{

                     let n = $("#n1").val()
                     let obj = {num:n}

                     $.ajax(
                        {
                            url: "square",
                            type: "POST",
                            data: JSON.stringify(obj),

                            success : function(respdata)
                            {
                                $("#p3").html(`message = ${respdata.sqr}`)
                            },
                            beforeSend:function(request)
                            {  
                                console.log(request)
                                request.setRequestHeader('Content-Type','application/json')
                            }

                        }


                     )       


                })
            })

            





 </script>
        </head>

        <body>
           <input type="button" value="press me" id="b1">
           <br>

            <input type="number"  id="n1" placeholder="enter no.">
            <input type="button" id="b2" value="press for sqr" >
            <p id="p1"></p>
            <p id="p2"></p>
            <p id="p3"></p>
        </body>
    </html>